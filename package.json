{
  "name": "workspace",
  "version": "1.0.0",
  "description": "Space Automation Framework - A robust Cypress automation framework with BDD, POM, and Allure reporting",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "open": "cypress open",
    "cy:run": "cypress run --env allure=true",
    "cy:run:chrome": "cypress run --browser chrome --env allure=true",
    "cy:run:headed": "cypress run --headed --env allure=true",
    "allure:generate": "allure generate allure-results --clean",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "npm run cy:run && npm run allure:generate && npm run allure:open",
    "test:smoke": "cypress run --env TAGS='@smoke'",
    "test:regression": "cypress run --env TAGS='@regression'",
    "clean:reports": "rm -rf reports/* allure-results/* allure-report/*",
    "test:parallel": "cypress run --record --parallel",
    "lint": "echo 'Linting not configured yet'",
    "setup": "cypress install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rakeshgowdacs/hello-world.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rakeshgowdacs/hello-world/issues"
  },
  "homepage": "https://github.com/rakeshgowdacs/hello-world#readme",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "allure-cypress": "^3.3.3",
    "cypress": "^15.0.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "dotenv": "^17.2.1",
    "moment": "^2.30.1"
  }
}
